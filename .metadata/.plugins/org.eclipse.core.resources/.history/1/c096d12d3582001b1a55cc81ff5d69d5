package company;
import java.util.ArrayList;
import java.util.Scanner;

import employee.*;

public class Company {
	static Scanner scanner = new Scanner(System.in);
	String companyName;

	static ArrayList<Object> addEmp(ArrayList<Object> employeeList) {
		int id, age;
		String name, position;
		System.out.println("Enter id ");
		id = Integer.parseInt(scanner.nextLine());
		System.out.println("Enter Name ");
		name = scanner.nextLine();
		System.out.println("Enter age ");
		age = Integer.parseInt(scanner.nextLine());
		System.out.println("Enter position ");
		position = scanner.nextLine();
		Employee obj = new Employee(id, name, position, age);
		employeeList.add(obj);

		return employeeList;

	}

	static ArrayList<Object> updateEmp(ArrayList<Object> employeeList) {
		int id, age;
		String name, position;

		System.out.println("Enter id ");
		id = Integer.parseInt(scanner.nextLine());

		for (int i = 0; i < employeeList.size(); i++) {
			Employee obj = (Employee) employeeList.get(i);

			if (obj.getId() == id) {

				System.out.println("Enter Name ");
				name = scanner.nextLine();
				System.out.println("Enter age ");
				age = Integer.parseInt(scanner.nextLine());
				System.out.println("Enter position ");
				position = scanner.nextLine();
				Employee obj1 = new Employee(id, name, position, age);
				employeeList.remove(i);
				employeeList.add(obj1);
			}

		}

		return employeeList;

	}

	static void viewEmp(ArrayList<Object> employeeList) {
		for (int i = 0; i < employeeList.size(); i++) {
			Employee obj = (Employee) employeeList.get(i);
			System.out.println("Enter Name: " + obj.getId());
			System.out.println("Enter Name: " + obj.getName());
			System.out.println("Enter age: " + obj.getAge());
			System.out.println("Enter position: " + obj.getPosition());
		}

	}

	static ArrayList<Object> removeEmp(ArrayList<Object> employeeList) {
		int id;

		System.out.println("Enter id ");
		id = Integer.parseInt(scanner.nextLine());

		for (int i = 0; i < employeeList.size(); i++) {
			Employee obj = (Employee) employeeList.get(i);
			if (obj.getId() == id) {
				employeeList.remove(i);
			}
		}
		return employeeList;
	}

	public static void main(String args[]) {
		System.out.println("Which login you want- /n1. Employee Login\n2. HR Login");
		ArrayList<Object> employeeList = new ArrayList<Object>();
		int login = Integer.parseInt(scanner.nextLine());
		if (login == 1) {
			employeeList = employeeLogin(employeeList);
		} else if (login == 2) {
			employeeList = hrLogin(employeeList);
		}
	}

	static ArrayList<Object> employeeLogin(ArrayList<Object> employeeList) {
		System.out.println(
				"What do you want to do:\n1. Add employee\n2. Update employee\n3. View Employee\n4. Remove employee\n5. exit");
		
		int login = Integer.parseInt(scanner.nextLine());
		while(true) {
			System.out.println(
					"What do you want to do:\n1. Add employee\n2. Update employee\n3. View Employee\n4. Remove employee\n5. exit");
			
			login = Integer.parseInt(scanner.nextLine());
		if (login == 1) {
			employeeList = addEmp(employeeList);
		} else if (login == 2) {
			employeeList = updateEmp(employeeList);

		} else if (login == 3) {
			viewEmp(employeeList);

		} else if (login == 4) {
			employeeList = removeEmp(employeeList);
			

		}
		else if (login == 5) {
			System.exit(0);
			

		}
		
		}

		return employeeList;
	}
	
	static ArrayList<Object> hrLogin(ArrayList<Object> employeeList) {
		System.out.println(
				"What do you want to do:\n1. Add employee\n2. Update employee\n3. View Employee\n4. Remove employee");
		int login = Integer.parseInt(scanner.nextLine());
		if (login == 1) {
			employeeList = addEmp(employeeList);
		} else if (login == 2) {
			employeeList = updateEmp(employeeList);

		} else if (login == 3) {
			viewEmp(employeeList);

		} else if (login == 4) {
			employeeList = removeEmp(employeeList);

		}

		return employeeList;
	}
}
