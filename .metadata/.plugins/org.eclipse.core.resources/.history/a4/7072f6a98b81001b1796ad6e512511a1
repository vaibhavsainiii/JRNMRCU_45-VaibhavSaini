	static HashMap<String, Integer> getValues(HashMap<String, Integer> map, int n) {
		int runs;
		String name;
		for (int i = 1; i <= n; i++) {
			System.out.println("Enter the details of player " + i);
			name = sc.next();
			runs = Integer.parseInt(sc.next());
			map.put(name, runs);
		}
		return map;

	}
}