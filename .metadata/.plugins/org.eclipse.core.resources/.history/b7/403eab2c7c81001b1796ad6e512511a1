package collections;
import java.util.*;

public class MaxScore {
	static Scanner sc=new Scanner(System.in);
	
public static void main(String args[])
{
	
	HashMap<String, Integer> map=new HashMap<String, Integer>();
	System.out.println("Enter the number of players");
	int n=Integer.parseInt(sc.next());
	int max=0;
	map=getValues(map, n);
	for(int run : map.values()){   
		
		if(max<run)
		{
			max=run;
		    System.out.println(max);  

		}
	}
    System.out.println("Max runs was scored by "+map.get(max));  

	    sc.close();
}
static HashMap<String, Integer> getValues(HashMap<String, Integer> map,int n)
{int runs,max=0;
String name;
for(int i=0;i<n;i++)
{
	System.out.println("Enter the details of player "+ i+1);
name=sc.next();
	runs=Integer.parseInt(sc.next());
	map.put(name, runs);}
return map;
	
}
}